/*****************************************************************************
** Includes
*****************************************************************************/

#include <iostream>
#include <ecl/linear_algebra.hpp>
#include "../../include/ecl/mobile_robot/pose.hpp"

/*****************************************************************************
** Implementation
*****************************************************************************/

using ecl::Pose;
using ecl::linear_algebra::Vector3d;

/*****************************************************************************
** Main
*****************************************************************************/

int main(int argc, char **argv) {

	Pose a, b;
	a << 1.0, 2.0, 0.00;
	b << 1.0, 3.0, 3.14;
	std::cout << b - a << std::endl;
	a << 0.0, 0.0, 0.78;
	b << 1.0, 1.0, 0.78;
	Pose diff = b-a;
	std::cout << diff << std::endl;
	a += diff;
	std::cout << a << std::endl;
	std::cout << b << std::endl;

	return 0;
}

